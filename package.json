{
  "name": "storybook-addon-badges",
  "version": "3.0.0-semantically-released",
  "description": "Add badges to your stories",
  "keywords": [
    "storybook-addons",
    "badges",
    "tags",
    "organize"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tetarchus/storybook-addon-badges.git"
  },
  "license": "MIT",
  "author": "tetarchus <contact@tetbot.app>",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./manager": "./dist/manager.js",
    "./preview": "./dist/preview.js",
    "./package.json": "./package.json"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "*.js",
    "*.d.ts"
  ],
  "workspaces": [
    "docs"
  ],
  "scripts": {
    "build": "tsup",
    "build-storybook": "storybook build",
    "build:watch": "npm run build -- --watch",
    "chromatic": "chromatic --exit-on-zero-changes",
    "cz": "cz",
    "lint": "eslint --flag unstable_ts_config .",
    "postinstall": "patch-package",
    "prepare": "node ./.husky/install.js",
    "prerelease": "zx scripts/prepublish-checks.js",
    "release": "npm run build && npx semantic-release",
    "start": "run-p build:watch \"storybook -- --no-open\"",
    "start:all": "run-p start start:docs",
    "start:docs": "npm run start -w docs",
    "storybook": "storybook dev -p 6006",
    "test": "vitest",
    "test:ui": "vitest dev --ui",
    "test:browser": "vitest --browser.enabled",
    "tsc": "tsc",
    "validate": "run-p tsc lint \"test -- --no-watch\""
  },
  "dependencies": {
    "@storybook/icons": "1.2.12",
    "@tetarchus/utils": "0.1.11",
    "ohash": "1.1.4",
    "semver": "7.6.3"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "3.2.2",
    "@commitlint/cli": "19.5.0",
    "@commitlint/config-conventional": "19.5.0",
    "@commitlint/cz-commitlint": "19.5.0",
    "@commitlint/types": "19.5.0",
    "@eslint/js": "9.15.0",
    "@prettier/plugin-xml": "3.4.1",
    "@storybook/addon-a11y": "8.4.4",
    "@storybook/addon-essentials": "8.4.4",
    "@storybook/addon-jest": "8.4.4",
    "@storybook/addon-links": "8.4.4",
    "@storybook/blocks": "8.4.4",
    "@storybook/experimental-addon-test": "8.4.4",
    "@storybook/manager-api": "8.4.4",
    "@storybook/preview-api": "8.4.4",
    "@storybook/react": "8.4.4",
    "@storybook/react-vite": "8.4.4",
    "@storybook/test": "8.4.4",
    "@storybook/theming": "8.4.4",
    "@storybook/types": "8.4.4",
    "@testing-library/jest-dom": "6.6.3",
    "@testing-library/react": "16.0.1",
    "@types/eslint__js": "8.42.3",
    "@types/node": "22.9.0",
    "@types/react": "18.3.12",
    "@types/react-dom": "18.3.1",
    "@types/semver": "7.5.8",
    "@vitejs/plugin-react": "4.3.3",
    "@vitest/browser": "2.1.5",
    "@vitest/coverage-v8": "2.1.5",
    "@vitest/ui": "2.1.5",
    "boxen": "8.0.1",
    "chromatic": "11.18.1",
    "commitizen": "4.3.1",
    "dedent": "1.5.3",
    "eslint": "9.15.0",
    "eslint-plugin-react": "7.37.2",
    "eslint-plugin-react-hooks": "5.0.0",
    "globals": "15.12.0",
    "husky": "9.1.6",
    "jiti": "2.4.0",
    "jsdom": "25.0.1",
    "lint-staged": "15.2.10",
    "npm-run-all2": "7.0.1",
    "patch-package": "8.0.0",
    "playwright": "1.48.2",
    "prettier": "3.3.3",
    "prettier-plugin-packagejson": "2.5.3",
    "prompts": "2.4.2",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "semantic-release": "24.2.0",
    "storybook": "8.4.4",
    "tsup": "8.3.5",
    "type-fest": "4.27.0",
    "typescript": "5.6.3",
    "typescript-eslint": "8.14.0",
    "vite": "5.4.11",
    "vite-plugin-node-polyfills": "0.22.0",
    "vite-tsconfig-paths": "5.1.2",
    "vitest": "2.1.5",
    "vitest-axe": "1.0.0-pre.3",
    "zx": "8.2.2"
  },
  "peerDependencies": {
    "storybook": "^8.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "bundler": {
    "exportEntries": [
      "./src/index.ts"
    ],
    "managerEntries": [
      "./src/manager.tsx"
    ],
    "previewEntries": [
      "./src/preview.ts"
    ]
  },
  "overrides": {
    "eslint": "9.15.0"
  },
  "storybook": {
    "displayName": "Badges",
    "supportedFrameworks": [
      "react",
      "vue",
      "angular",
      "web-components",
      "ember",
      "html",
      "svelte",
      "preact",
      "react-native"
    ],
    "icon": "https://raw.githubusercontent.com/tetarchus/storybook-addon-badges/main/.github/images/storybook-addon-badges.png"
  }
}
