{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "incremental": false,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "lib": ["es2020", "dom"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "noEmit": true,
    "noImplicitAny": true,
    "paths": {
      "@/*": ["./src/*"]
    },
    "rootDir": "./src",
    "skipLibCheck": true,
    "target": "ES2020",
    "verbatimModuleSyntax": true
  },
  "include": ["src/**/*"]
}
